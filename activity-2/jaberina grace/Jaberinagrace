		        System.out.println("ENTER ITEM:");

		        item=code.nextInt();

		        //FOOD PRICES//

		        if (item==1){

		            System.out.println("YOU SELECTED 1pc FRIED CHICKEN");

		            total=total+10;

		            }else if (item==2){

		            System.out.println("YOU SELECTED 1pc HUMBA");

		            total=total+50;

		            }else if (item==3){

		            System.out.println("YOU SELECTED 1pc GINATAANG BABOY");

		            total=total+5;

