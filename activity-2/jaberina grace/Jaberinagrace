		       System.out.println("[5]SPONGE CRUNCH: $25");

		        //SNACKS PRICES//

		        System.out.println("ENTER ITEM:");

		        item=code.nextInt();

		        if (item==1){

		            System.out.println("YOU SELECTED 1pc BURGER");

		            total=total+10;

