		            System.out.println("YOU SELECTED 1pc BAM-E");

		            total=total+25;

		            }else{

		                System.out.println("INVALID KEY");

		            }

		        

		    }else if(grace==2){

		        System.out.println("--YOU SELECTED SNACKS--");

